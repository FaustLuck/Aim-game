{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "ts",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "sourceMap": true
  },
  "include": [
    "src/scripts/*"
  ],
  "exclude": [
    "node_modules"
  ]
}